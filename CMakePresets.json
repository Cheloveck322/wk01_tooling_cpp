{
    "version": 3,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug ASan mode",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "environment": {
                "CMAKE_CXX_FLAGS_DEBUG": "fsanitize=address",
                "CMAKE_EXE_LINKER_FLAGS_DEBUG": "fsanitize=address"
            }
        },
        {
            "name": "release",
            "displayName": "Release -O3",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "environment": {
                "CMAKE_CXX_FLAGS_RELEASE": "-O3"
            }
        }
    ],
    "buildPresets": [
        { "name": "build-debug", "configurePreset": "debug"},
        { "name": "build-release", "configurePreset": "release" }
    ],
    "testPresets": [
        { "name": "test-debug", "configurePreset": "debug" }
    ]
}